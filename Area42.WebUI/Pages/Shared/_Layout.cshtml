
<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Vakantiepark Area42</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Area42.WebUI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-primary fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">Vakantiepark Area42</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Navigatie wisselen">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Accommodaties/Index">Accommodaties</a>
                        </li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Reserveringen/Index">Reserveringen</a>
                            </li>
                            @if (User.IsInRole("Medewerker"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Dashboard/Index">Dashboard</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Account/Register">Registreren</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Contact/Index">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container mt-5 pt-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-4">
        <div class="container">
            <small>&copy; 2025 Vakantiepark Area42. Alle rechten voorbehouden.</small>
        </div>
    </footer>

    <!-- Bootstrap JavaScript Bundle (inclusief Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+YzYtqKz4jd6COSMacoJ7f+gZ4XxX"
            crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>