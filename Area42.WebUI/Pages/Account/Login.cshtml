@page
@model Area42.WebUI.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Inloggen";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 50vh;">
    <div class="card p-4 shadow" style="max-width: 400px; width: 100%; border-radius: 1rem;">
        <div class="card-body">
            <h3 class="card-title text-center mb-1">Gebruikerslogin</h3>
            <p class="text-center text-muted mb-4" style="font-size: 0.9rem;">Welkom terug, log in om verder te gaan</p>

            <form method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Username</label>
                    <input asp-for="Username" type="email" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Wachtwoord</label>
                    <input asp-for="Password" type="password" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Inloggen</button>
            </form>

            <div class="mt-3 text-center">
                <a href="/Account/AccessDenied" class="text-decoration-none">Wachtwoord vergeten? 🙃</a>
            </div>
            <div class="mt-3 text-center">
				<a href="/Account/medewerker/Login" class="text-decoration-none">Medewerker Login</a>
                </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-3 text-center">@Model.ErrorMessage</div>
}
