@page
@model Area42.Pages.Account.Medewerker.LoginModel
@{
    ViewData["Title"] = "Medewerker Inloggen";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 50vh;">
    <div class="card p-4 shadow border-start border-5 border-primary" style="max-width: 400px; width: 100%; border-radius: 1rem;">
        <div class="card-body">
            <div class="text-center mb-3">
                <i class="bi bi-person-badge" style="font-size: 2.5rem; color: #0d6efd;"></i>
            </div>
            <h3 class="card-title text-center mb-1">Medewerker Inloggen</h3>
            <p class="text-center text-muted mb-4" style="font-size: 0.9rem;">Toegang tot het interne dashboard</p>

            <form method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">E-mailadres</label>
                    <input asp-for="Email" type="email" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Wachtwoord</label>
                    <input asp-for="Password" type="password" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-outline-primary w-100">Inloggen</button>
            </form>

            <div class="mt-3 text-center">
                <a href="/Account/Login" class="text-decoration-none">← Terug naar gebruikerslogin</a>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-3 text-center">@Model.ErrorMessage</div>
}
